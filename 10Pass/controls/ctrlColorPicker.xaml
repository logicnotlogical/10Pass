<UserControl
    x:Class="_10Pass.controls.ctrlColorPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_10Pass.controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300">

    <Button>
        <Button.Flyout>
            <Flyout>
                <Grid Width="300" Height="300" x:Name="ColorPicker" Background="{ThemeResource FlyoutBackgroundThemeBrush}" Padding="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,10,0" HorizontalAlignment="Right">Red:</TextBlock>
                    <Slider Grid.Column="1" Grid.Row="0"  x:Name="RSlider" LargeChange="5" Maximum="255" ValueChanged="Slider_ValueChanged" ></Slider>

                    <TextBlock Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,10,0" HorizontalAlignment="Right">Green:</TextBlock>
                    <Slider Grid.Column="1" Grid.Row="1"  x:Name="GSlider" LargeChange="5" Maximum="255" ValueChanged="Slider_ValueChanged" ></Slider>

                    <TextBlock Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Margin="0,0,10,0" HorizontalAlignment="Right">Blue:</TextBlock>
                    <Slider Grid.Column="1" Grid.Row="2"  x:Name="BSlider" LargeChange="5" Maximum="255" ValueChanged="Slider_ValueChanged" ></Slider>

                    <TextBlock Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" Margin="0,0,10,0" HorizontalAlignment="Right">Alpha:</TextBlock>
                    <Slider Grid.Column="1" Grid.Row="3"  x:Name="ASlider" LargeChange="5" Maximum="255" ValueChanged="Slider_ValueChanged"  ></Slider>

                    <Rectangle Grid.ColumnSpan="2" Grid.Row="4"  x:Name="showColor" Height="84" Margin="0"/>

                    <TextBlock Grid.Column="0" Grid.Row="5"  Margin="0,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Right">RGBA:</TextBlock>
                    <TextBox Grid.Column="1" Grid.Row="5" Margin="0,5"  x:Name="txtRGBA" Text="#FF000000"/>
                </Grid>
            </Flyout>
        </Button.Flyout>
        <StackPanel Orientation="Horizontal">
            <Rectangle x:Name="rectColorPreview" Width="20" />
            <TextBlock Margin="5,0,0,0">Change</TextBlock>
        </StackPanel>
    </Button>
    
</UserControl>
